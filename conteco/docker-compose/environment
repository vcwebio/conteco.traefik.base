#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_SERVICES='nginx.base'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_NGINX_ENVIRONMENT,$CONTECO_DC_NGINX_COMMAND,$CONTECO_DC_NGINX_VOLUMES,$CONTECO_DC_NGINX_DEPLOY_MODE,$CONTECO_DC_NGINX_DEPLOY_REPLICAS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_NGINX_ENVIRONMENT=
export CONTECO_DC_NGINX_COMMAND=
export CONTECO_DC_NGINX_VOLUMES=
export CONTECO_DC_NGINX_DEPLOY_MODE="replicated"
export CONTECO_DC_NGINX_DEPLOY_REPLICAS="1"
# END GLOBAL SETTINGS

# START SETTINGS nginx.base
export CONTECO_DC_NGINX_PORTS="80:80"
export CONTECO_DC_NGINX_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_NGINX_VOLUMES_NAME="${CONTECO_ECOSYSTEM}_nginx_volume"
export CONTECO_DC_NGINX_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_NGINX_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_NGINX_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_NGINX_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="32m"
# END SETTINGS nginx.base

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_VOLUMES="${CONTECO_DC_NGINX_VOLUMES_NAME}: {}"
export CONTECO_DC_GLOBAL_NETWORKS="${CONTECO_DC_NGINX_NETWORKS}: { external: true }"
# END TOPLEVEL SETTINGS
