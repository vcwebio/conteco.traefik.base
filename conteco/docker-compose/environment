#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="traefik.base"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_traefik"
export CONTECO_DC_GLOBAL_BOOTSTACKS="conteco_dc_traefik"
export CONTECO_DC_GLOBAL_RUNSTACKS=""
export CONTECO_DC_GLOBAL_VOLUME_LIST="${DOLLAR}{CONTECO_STACKPREFIX}_traefik_config_volume"
export CONTECO_DC_GLOBAL_VOLUME_INITIALISED="${DOLLAR}{CONTECO_STACKPREFIX}_traefik_config_volume:/etc/traefik"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_TRAEFIK_ENVIRONMENT,$CONTECO_DC_TRAEFIK_COMMAND,$CONTECO_DC_TRAEFIK_VOLUMES,$CONTECO_DC_TRAEFIK_NETWORKS,$CONTECO_DC_TRAEFIK_DEPLOY_MODE,$CONTECO_DC_GLOBAL_NETWORKS,$CONTECO_DC_GLOBAL_VOLUMES'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_TRAEFIK_ENVIRONMENT=
export CONTECO_DC_TRAEFIK_COMMAND=
export CONTECO_DC_TRAEFIK_VOLUMES="'/var/run/docker.sock:/var/run/docker.sock', '${DOLLAR}{CONTECO_STACKPREFIX}_traefik_config_volume:/etc/traefik'"
export CONTECO_DC_TRAEFIK_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay, ${DOLLAR}{CONTECO_NETWORKGLOBAL}_overlay"
export CONTECO_DC_TRAEFIK_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay: { external: true },${DOLLAR}{CONTECO_NETWORKGLOBAL}_overlay: { external: true }"
export CONTECO_DC_GLOBAL_VOLUMES="${DOLLAR}{CONTECO_STACKPREFIX}_traefik_config_volume: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS traefik.base
export CONTECO_DC_TRAEFIK_PORTS="80:80,8080:8080"
export CONTECO_DC_TRAEFIK_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_TRAEFIK_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="32m"
# END SETTINGS traefik.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
